pipeline {
    agent { 
        docker { 
            image 'ovi-cpp-agent:java21'
            // Alpine needs root to handle the workspace permissions correctly
            args '-u root' 
        }
    }
    environment {
        // Ensures the binary name matches your Makefile
        APP_NAME = "test_app"
    }

    stages {
        stage('Checkout') {
            steps {
                // Automatically pulls the branch that triggered the build
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "ğŸ”¨ Starting Build for ${APP_NAME}..."
                // Runs the same 'make' command you use locally
                sh 'make'
            }
        }

        stage('Test') {
            steps {
                echo "ğŸš€ Running Tests..."
                // Executes your binary to verify it works
                sh "./${APP_NAME}"
            }
        }
    }

    post {
        always {
            echo "ğŸ§¹ Cleaning up workspace..."
            sh 'make clean'
        }
        success {
            echo "âœ… Build and Test Passed!"
        }
        failure {
            echo "âŒ Build Failed. Check the Console Output."
        }
    }
}